<tr class="@rowClass">
    <td class="text-center"><input type="checkbox" bind="@Done" /></td>
    <td class="@textClass">@Quantity</td>
</tr>

@functions{

    [Parameter]
    string PayCode{get;set;}

    string Rate{get;set;}

    [Parameter]
    decimal Quantity{get;set;}

    [Parameter]
    decimal Amount{get;set;}
    
    [Parameter]
    string Text { get; set; }

    [Parameter]
    bool Done { get; set; }

    string textClass => Done ? "done text-muted" : null;
    string rowClass => Done ? "table-secondary" : null;
}